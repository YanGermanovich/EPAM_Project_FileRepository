    @model Lume.Models.ResourceViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel2">@Model.Name</h4>
</div>
<div class="modal-body">
    <div class="modal_body_preview">
        <div class="panel-default modal_body_description">
            <div class="panel-body">@Model.Description</div>
        </div>
        <div class="modal_body_link"> <a class=" btn btn-primary">Download</a></div>
        <div class="modal_body_statistic">
            <div class="modal_body_statistic_views">Views: @Model.Views </div>
            <div class="modal_body_statistic_rating">
                Rating:
                <input class="rating" value="@Model.Rating" data-step="0.1" data-size="xs" data-show-clear="false">
            </div>
        </div>
    </div>
</div>