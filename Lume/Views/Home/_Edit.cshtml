@using Lume.Models;
@model ResourceViewModel

@using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { @class = "modal_upload_form", enctype = "multipart/form-data" }))
{
        @Html.TextBoxFor(m => m.Id, new { type = "hidden", id = "resourceEditID" })

        <div class="form-group modal_upload_form_name">
            <div>
                @Html.LabelFor(m => m.Name)
            </div>

            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id = "name" })
            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
        </div>
        <div class="form-group modal_upload_form_name">
            <div>
                @Html.LabelFor(m => m.Description)
            </div>
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
        <input type="submit" value="Save" class="btn btn-primary" />
}
